                $('#subid').empty();
                $('#subid').append('<option value="">select sub category</option>');
                $(data).each(function (i, item) {
                    $('#subid').append('<option value="' + item.id + '">' + item.category_name + '</option>');

                    $('select[id="subid"]').val(id);
                    // $('#subid').val(id);
